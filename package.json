{
  "name": "infoskjermenelectronapp",
  "productName": "InfoskjermenPlayer",
  "version": "0.1.4",
  "description": "Infoskjermen player for windows, mac og linux.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:windows": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "publish": "electron-builder --linux --windows -p always"
  },
  "keywords": [],
  "author": "Favo AS <georg@favo.no>",
  "license": "MIT",
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "georgsku",
        "repo": "InfoskjermenElectronApp"
      }
    ],
    "appId": "com.favo.infoskjermenplayer",
    "productName": "InfoskjermenPlayer",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "./assets/icon/png/logo256.png",
      "category": "Utility",
      "target": {
        "target": "appimage",
        "arch": [
          "armv7l"
        ]
      },
      "desktop": {
        "Name": "InfoskjermenPlayer",
        "Terminal": "false",
        "X-GNOME-Autostart-enabled": "true"
      }
    },
    "win": {
      "icon": "./assets/icon/win/logo.ico",
      "target": {
        "target": "nsis",
        "arch": "x64"
      }
    },
    "nsis": {
      "installerIcon": "./assets/icon/win/logo.ico",
      "uninstallerIcon": "./assets/icon/win/logo.ico",
      "runAfterFinish": true
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "infoskjermenelectronapp"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "add": "^2.0.6",
    "electron-log": "^4.2.2",
    "electron-shutdown-command": "0.0.8",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.1",
    "systeminformation": "^4.26.9",
    "xmlhttprequest": "^1.8.0",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.51",
    "@electron-forge/maker-deb": "^6.0.0-beta.51",
    "@electron-forge/maker-rpm": "^6.0.0-beta.51",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.51",
    "@electron-forge/maker-zip": "^6.0.0-beta.51",
    "electron": "^9.0.2",
    "electron-builder": "^22.7.0"
  }
}
